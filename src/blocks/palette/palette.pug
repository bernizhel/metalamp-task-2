        {class: 'dark-shade-75', name: 'Dark Shade 75%', hex: '#1F2041'},
        {class: 'dark-shade-50', name: 'Dark Shade 50%', hex: '#1F2041'},
        {class: 'dark-shade-25', name: 'Dark Shade 25%', hex: '#1F2041'},
        {class: 'dark-shade-5', name: 'Dark Shade 5%', hex: '#1F2041'},
        {class: 'purple', name: 'Purple', hex: '#BC9CFF'},
        {class: 'green', name: 'Green', hex: '#6FCF97'},
