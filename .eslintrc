{
    "parser": "@babel/eslint-parser",
    "rules": {
        "no-unused-vars": 1,
        "curly": 1,
        "eqeqeq": 1,
        "no-undefined": 1,
        "no-use-before-define": 2,
        "indent": [2, 4],
        "quotes": [2, "single"],
        "semi": [2, "always"]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended"
}
